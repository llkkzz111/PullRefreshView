<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ybao.pullrefreshview.simple">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.FlingActivity"
            android:label="弹性拖动"></activity>
        <activity
            android:name=".activities.NormalRefreshActivity"
            android:label="经典下拉刷新"></activity>
        <activity
            android:name=".activities.ExpandActivity"
            android:label="其他拓展下拉刷新"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".activities.NormolEpActivity"
            android:label="拓展控件（经典模式）"></activity>
        <activity
            android:name=".activities.RGActivity"
            android:label="拓展控件（混合模式1）"></activity>
        <activity
            android:name=".activities.RG2Activity"
            android:label="拓展控件（混合模式2）"></activity>
        <activity
            android:name=".activities.DrawerEpActivity"
            android:label="拓展控件（抽屉模式）"></activity>
        <activity
            android:name=".activities.ScrollerEpActivity"
            android:label="拓展控件（滑块模式）"></activity>
        <activity
            android:name=".activities.AllViewActivity"
            android:label="其他控件"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".activities.ScrollViewActivity"
            android:label="PullableScrollView"></activity>
        <activity
            android:name=".activities.TextViewActivity"
            android:label="PullableTextView"></activity>
        <activity
            android:name=".activities.SimpleCLActivity"
            android:label="PullableTextView"></activity>
    </application>

</manifest>
